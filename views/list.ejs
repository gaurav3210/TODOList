<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>


 <div class="box">
   <%  newListItems.forEach(function (itemPresent) { %>
    <form action="/delete" method="post">
         <div class="item">
      <input type="checkbox" name="checkbox" value="<%= itemPresent._id %>" onchange="this.form.submit()">
          <p><%= itemPresent.name %></p>
             <input type="hidden" name="listName" value="<%= listTitle%>">
    </div>
    </form>

   <%  }) %>
   <form class="item" action="/" method="post">
     <label for="NextItem"></label>
     <input type="text" name="newItem" placeholder="New Item", autocomplete="off">
     <button type="submit" name="list", value=<%= listTitle %> >+</button>
   </form>
 </div>

<%- include("footer") -%>
